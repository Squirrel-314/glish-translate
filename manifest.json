{
   "name": "Glish Translate",
   "version": "0.1.0",
   "description": "A Chrome extension that translates Glish!",
   "manifest_version": 2,
   "short_name": "Glish Translate",
   "permissions": ["activeTab", "declarativeContent", "storage", "<all_urls>"],
   "content_scripts": [
      {
         "matches": ["<all_urls>"],
         "css": ["background.css"],
         "js": ["background.js"]
      }
   ],
   "browser_action": {
   "default_title": "Runs stuff if you do stuff when it feels like it.",
   "default_popup": "popup.html",
   "icons": {
      "16": "Assets/icon-16.png",
      "48": "Assets/icon-48.png",
      "128": "Assets/icon-128.png"
   },
   "default_icon": {
         "16": "Assets/icon-16.png",
         "32": "Assets/icon-32.png",
         "48": "Assets/icon-48.png",
         "128": "Assets/icon-128.png"
      }
   }
}
